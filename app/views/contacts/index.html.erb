<p id="notice"><%= notice %></p>

<h1><%= "#{t('message.listing')} #{@contacts.model.model_name.human(count: 2)}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.contact.name') %></th>
      <th><%= t('activerecord.attributes.contact.email') %></th>
      <th><%= t('activerecord.attributes.contact.kind_id') %></th>
      <th><%= t('activerecord.attributes.contact.rmk') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.kind.description %></td>
        <td><%= contact.rmk %></td>
        <td><%= link_to t('buttons.show'), contact %></td>
        <td><%= link_to t('buttons.edit'), edit_contact_path(contact) %></td>
        <td><%= link_to t('buttons.destroy'), contact, method: :delete, data: { confirm: t('message.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @contacts %>
<br>

<%= link_to t('buttons.new'), new_contact_path %>


<div class="container">

  <% if flash[:notice] %>
    <div class="card-alert alert-info">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>

  <h1 class="text-center"><%= "#{t('message.listing')} #{@contacts.model.model_name.human(count: 2)}" %></h1>
  <%= link_to "#{t('buttons.new')} #{@contacts.model.model_name.human(count: 1)}", new_contact_path, class: "btn btn-primary"%>

  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th><%= t('activerecord.attributes.contact.name') %></th>
        <th><%= t('activerecord.attributes.contact.email') %></th>
        <th><%= t('activerecord.attributes.contact.kind_id') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.kind.description %></td>
          <td><%= link_to t('buttons.show'), contact, class: "btn btn-success" %></td>
          <td><%= link_to t('buttons.edit'), edit_contact_path(contact), class: "btn btn-warning"%></td>
          <td><%= link_to t('buttons.destroy'), contact, method: :delete, data: { confirm: t('message.confirm') }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @contacts%>
  </div>
</div>


<p id="notice"><%= notice %></p>

<h1><%= "#{t('message.listing')} #{t('activerecord.models.address.other')}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.address.street') %></th>
      <th><%= t('activerecord.attributes.address.city') %></th>
      <th><%= t('activerecord.attributes.address.state') %></th>
      <th><%= t('activerecord.attributes.address.contact_id') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.contact.name %></td>
        <td><%= link_to t('buttons.show'), address %></td>
        <td><%= link_to t('buttons.edit'), edit_address_path(address) %></td>
        <td><%= link_to t('buttons.destroy'), address, method: :delete, data: { confirm: t('message.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


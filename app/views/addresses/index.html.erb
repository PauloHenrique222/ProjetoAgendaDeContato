<% if flash[:notice] %>
  <div class="card-alert alert-info">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<div class="container">

  <h1 class="text-center"><%= "#{t('message.listing')} #{t('activerecord.models.address.other')}" %></h1>

  <table class="table table-striped">
    <thead class="thead-dark">
    <tr>
      <th><%= t('activerecord.attributes.address.street') %></th>
      <th><%= t('activerecord.attributes.address.city') %></th>
      <th><%= t('activerecord.attributes.address.state') %></th>
      <th><%= t('activerecord.attributes.address.contact_id') %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.contact.name %></td>
        <td><%= link_to t('buttons.show'), address, class: "btn btn-success" %></td>
        <td><%= link_to t('buttons.edit'), edit_address_path(address), class: "btn btn-warning" %></td>
        <td><%= link_to t('buttons.destroy'), address, method: :delete, data: { confirm: t('message.confirm') }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= paginate @addresses%>
  </div>
</div>

